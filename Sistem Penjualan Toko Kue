#include <iostream>
#include <string>
using namespace std;

string namaKue[3] = {"Mille Crepes", "Brownies", "Cheesecake"};
int hargaKue[3] = {20000, 50000, 75000};

void tampilkanKue() {
    cout << "\n=== Daftar Kue ===\n";
    for (int i = 0; i < 3; i++) {
        cout << i + 1 << ". " << namaKue[i] << " - Rp" << hargaKue[i] << endl;
    }
}
